study("Setup 9.4 - Larry Williams", shorttitle="9.4", overlay=true)

//EMA 9
ema9 = ema(close,9)
ema9Color = ema9 > ema9[1] and close > ema9 ? lime : ema9 < ema9[1] and close < ema9 ? red : yellow
plot( ema9, color=ema9Color, style=line, title="EMA9", linewidth=2)

//SETUP 9.4
ema9b1 = ema9[5]<ema9[4] and ema9[4]<ema9[3] and ema9[3]<ema9[2] and ema9[2]>ema9[1] and ema9[1]<ema9
ema9b2 = low>=low[1]

ema9s1 = ema9[5]>ema9[4] and ema9[4]>ema9[3] and ema9[3]>ema9[2] and ema9[2]<ema9[1] and ema9[1]>ema9
ema9s2 = close<ema9 

cond92b = ema9b1 and ema9b2
cond92s = ema9s1 and ema9s2

plotshape(cond92b, title="Buy 9.4", color=green, style=shape.labelup,size=size.small, location=location.belowbar,text="Buy 9.4", textcolor=black)

plotshape(cond92s, title="Sell 9.4", color=red, style=shape.labeldown,size=size.small, location=location.abovebar, text="Sell 9.4", textcolor=black)

//TRADE ACTIVATION
activr = cond92s[1] and low<low[1] 
plotshape(activr,title="Activer",color=black,text="Actived",textcolor=white,style=shape.labelup,location=location.belowbar,size=size.tiny)

activg = cond92b[1] and high>high[1]
plotshape(activg,title="Activeg",color=black,text="Actived",textcolor=white,style=shape.labeldown,location=location.abovebar,size=size.tiny)
